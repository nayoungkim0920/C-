2. imageProcessingLib.cpp
#include "ImageProcessingLib.h"

// 그레이스케일 이미지 버퍼 크기 계산
void calculateGrayScaleBufferSize(const NppiSize& oSizeROI, const NppiSize& oMaskSize, Npp32u& nBufferSize) {
    NppStatus status = nppiFilterMedianGetBufferSize_8u_C1R(oSizeROI, oMaskSize, &nBufferSize);
    if (status != NPP_SUCCESS) {
        std::cerr << "nppiFilterMedianGetBufferSize_8u_C1R failed with status: " << status << std::endl;
    }
    else {
        std::cout << "GrayScale Buffer Size: " << nBufferSize << std::endl;
    }
}

// 컬러 버퍼 크기 계산 함수
void calculateBufferSize(const NppiSize& oSizeROI, const NppiSize& oMaskSize, Npp32u& nBufferSize) {
    NppStatus status = nppiFilterMedianGetBufferSize_8u_C3R(oSizeROI, oMaskSize, &nBufferSize);
    if (status != NPP_SUCCESS) {
        std::cerr << "nppiFilterMedianGetBufferSize_8u_C3R failed with status: " << status << std::endl;
    }
    else {
        std::cout << "Color Buffer Size: " << nBufferSize << std::endl;
    }
}


// 에러 체크 함수
void checkCudaError(const char* msg) {
    cudaError_t err = cudaGetLastError();
    if (err != cudaSuccess) {
        std::cerr << msg << ": " << cudaGetErrorString(err) << std::endl;
        exit(EXIT_FAILURE);
    }
}

// NPP 오류 처리 함수
void checkNPPError(NppStatus status) {
    if (status != NPP_SUCCESS) {
        std::cerr << "NPP 오류: " << status << std::endl;
        exit(EXIT_FAILURE);
    }
}

//void checkNppError(NppStatus status, const std::string& errorMessage) {
